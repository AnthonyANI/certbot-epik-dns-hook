{
  "name": "certbot-epik-dns-hook",
  "version": "1.0",
  "description": "Manual hook for Certbot to use Epik and DNS-01 Challenge",
  "author": {
    "name": "Anthony Nave",
    "email": "nave_anthony@hotmail.com",
    "url": "https://aninvent.net",
    "contributors": [
      {
        "name": "Daniel Hopkirk",
        "email": "daniel@logicalroute.co.nz",
        "url": "https://logicalroute.co.nz"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AnthonyANI/certbot-epik-dns-hook.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AnthonyANI/certbot-epik-dns-hook/issues",
    "email": "nave_anthony@hotmail.com"
  },
  "scripts": {
    "start": "node auth_hook.js",
    "cleanup": "node cleanup_hook.js"
  },
  "dependencies": {
    "axios": "^1.7.3",
    "axios-retry": "^3.1.9",
    "chalk": "^4.1.2",
    "dotenv": "^5.0.1",
    "node-dig-dns": "^0.3.0",
    "util": "^0.10.3"
  },
  "devDependencies": {
    "eslint": "^7.32.0"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "array-bracket-newline": [
        "warn",
        "consistent"
      ],
      "array-element-newline": [
        "error",
        "consistent"
      ],
      "camelcase": "warn",
      "comma-dangle": "warn",
      "function-call-argument-newline": [
        "error",
        "consistent"
      ],
      "indent": [
        "warn",
        "tab"
      ],
      "linebreak-style": [
        "warn",
        "windows"
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "new-cap": "warn",
      "newline-after-var": "error",
      "newline-before-return": "error",
      "newline-per-chained-call": "error",
      "no-confusing-arrow": "warn",
      "no-eval": "error",
      "no-multiple-empty-lines": "warn",
      "no-trailing-spaces": "warn",
      "no-unused-vars": "warn",
      "no-use-before-define": "error",
      "no-var": "error",
      "object-curly-newline": "error",
      "object-property-newline": "error",
      "object-shorthand": "warn",
      "operator-assignment": "warn",
      "prefer-arrow-callback": "warn",
      "prefer-const": "warn",
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
